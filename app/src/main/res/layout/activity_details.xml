<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llDetailsAchtergrond"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/detailsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llDetailsDatum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llInhoudDatum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblDetailsDatum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:textSize="24dp"
                            android:inputType="textCapWords"
                            android:textStyle="bold"
                            android:text="datum"/>

                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llDetailsShift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llTitelShift"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/lblDetailsTitelShift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:text="@string/shift"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llInhoudShift"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Spinner
                            android:visibility="gone"
                            android:id="@+id/cboDetailsShiften"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Spinner>
                        <TextView
                            android:id="@+id/lblDetailsShift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text=""/>

                        <LinearLayout
                            android:id="@+id/llDetailsOrigineleShift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="("/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/original"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=": "/>
                            <TextView
                                android:id="@+id/lblDetailsOrigineleShift"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=")"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llInhoudExtra"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblDetailsExtra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:text=""/>
                            <TextView
                                android:id="@+id/lblDetailsTijdstip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:text=""/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llDetailsWissel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llTitelWissel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="7dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/lblDetailsTitelWissel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:text="@string/change"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llInhoudWissel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/chkDetailsWissel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="50dp" />


                            <ToggleButton
                                android:visibility="gone"
                                android:id="@+id/tglRichting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:textOff="For Me"
                                android:textOn="For" />
                        </LinearLayout>

                        <Spinner
                            android:visibility="gone"
                            android:id="@+id/cboDetailsCollegaWissel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"></Spinner>
                        <TextView
                            android:id="@+id/lblDetailsCollegaWissel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="18dp"
                            android:text=""/>

                        <CheckBox
                            android:visibility="gone"
                            android:id="@+id/chkZiekteOpvang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Is Ziekte Opvang" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDetailsPersoonlijk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llTitelPersoonlijk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/lblDetailsTitelPersoonlijk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notes"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llInhoudPersoonlijk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/txtDetailsPersoonlijk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:minLines="1"
                            android:maxLines="6"
                            android:scrollbars="vertical"
                            android:gravity="top|left"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/lblDetailsPersoonlijk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="18dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/prgLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"/>

    </RelativeLayout>
</LinearLayout>
