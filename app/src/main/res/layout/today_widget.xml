<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TodayWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99030303">

    <LinearLayout
        android:layout_weight="3"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_weight="2"
            android:text="00"
            android:id="@+id/lblWidTodDagNr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textAlignment="gravity"
            android:layout_margin="4dp"
            android:textColor="#ffffff"
            android:textSize="45sp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_weight="3"
            android:text="MA"
            android:id="@+id/lblWidTodDagNaam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|top"
            android:textAlignment="gravity"
            android:layout_margin="8dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border_layout_right_side"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblWidTodShift"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Dag Dienst (D)"
                android:textSize="20sp"
                android:textColor="#ffffff"/>

            <TextView
                android:visibility="visible"
                android:id="@+id/lblWidTodOrigShift"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|right"
                android:textAlignment="gravity"
                android:text="D"
                android:textSize="14sp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblWidTodVanTot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    van xx:yy tot xx:yy"
            android:textSize="14sp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/lblWidTodPersoonlijk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Persoonlijke activiteit"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>