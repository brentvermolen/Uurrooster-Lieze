<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llLijstAchtergrond"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/border_layout">

    <LinearLayout
        android:id="@+id/llLijstHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_layout_left_round"
        android:layout_weight="4">

        <TextView
            android:id="@+id/lblHeaderLijst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="23"
            android:textSize="40dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/lblLijstHeaderDag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:text="Maandag"
            android:textAlignment="center"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblLijstShift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Hier komt de shift"/>

            <TextView
                android:id="@+id/lblLijstOrigineelShift"
                android:gravity="top|right"
                android:textAlignment="gravity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:text="ZA.REC."/>

        </LinearLayout>

        <TextView
            android:id="@+id/lblLijstTijdstippen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Van xx:yy Tot xx:yy"/>

        <TextView
            android:id="@+id/lblLijstPersoonlijk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:text="Hier komt de persoonlijke activiteit"/>
    </LinearLayout>
</LinearLayout>